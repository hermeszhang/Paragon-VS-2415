void gentable(void)
{
  int16 i,j;  
  int16 x;
  for ( i = 0;  i < 256;  i++ )
  { 
    x =  i;
    for ( j = 0;  j < 8;  j++ )
    { 
      if ( x & 0x80L )
        x = ( (x << 1) & 0xff ) ^ POLYNOMIAL8;
      else
        x = ( x << 1 ) & 0xff; 
    }
    table[i] = x; 
  }
}

